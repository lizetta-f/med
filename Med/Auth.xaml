<Window x:Class="Med.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Med"
        mc:Ignorable="d"
        Title="Auth" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Авторизация" HorizontalAlignment="Center" FontSize="36" />
            <TextBlock Text="Логин:" Margin="0,5,0,0" />
            <TextBox x:Name="login" Padding="5" />
            <TextBlock Text="Пароль:" Margin="0,5,0,0" />
            <PasswordBox x:Name="password" Padding="5" />
            <Button x:Name="btnLogin" Content="Вход" Padding="5" Margin="0,5,0,0" Click="btnLogin_Click" />
        </StackPanel>
    </Grid>
</Window>
